<h1><%= @dojo.branch %></h1>
<a href="/dojos/<%= @dojo.id %>/edit" id = "link">Edit</a>
<h3>Address: <%= @dojo.street %></h3>
<h3>City: <%= @dojo.city %>   State: <%= @dojo.state %></h3>

<h2>Student Roster</h2>
<table class = "container">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Actions</th>
	</tr>
	<% if @students %>
	<% @students.each do |student| %>
	<tr>
		<td><%= student.first_name %></td>
		<td><%= student.last_name %></td>
		<td><%= student.email %></td>
		<td>
			<a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a>
			<a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a>
			<a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Destroy</a>
		</td>
	</tr>
	<% end %>
	<% end %>
</table>

<a href="/dojos" id = "link">Home</a>
<a href="/dojos/<%= @dojo.id %>/students/new" id = "link">Add Student</a>