<h1>Edit <%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h1>
<% if flash[:alert] %>
	<% flash[:alert].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>
<div class = "container" id = "create">
	<form action = "/dojos/<%= @dojo.id %>/students/<%= @student.id %>/edit" method = "post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<input type="hidden" name="_method" value="patch">
		<label>First Name: <input type = 'text' value = '<%= @student.first_name %>' name = 'student[first_name]' required></label>
		<label>Last Name: <input type = 'text' value = '<%= @student.last_name %>' name = 'student[last_name]' required></label>
		<label>Email: <input type = 'text' value = '<%= @student.email %>' name = 'student[email]' required></label>
		<label>Dojo: 
			<select name = 'student[dojo_id]' required>
				<option value = "<%= @dojo.id %>"><%= @dojo.branch %></option>
				<% @dojos.each do |place| %>
					<% if @dojo.id != place.id %>
						<option value = "<%= place.id %>"><%= place.branch %></option>
					<% end %>
				<% end %>
			</select>
		</label>
		<input type = 'submit' value = 'Update'>
	</form>
</div>
<a href="/dojos" id = "link">Home</a>
<a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" id = "link"><%= @student.first_name %></a>